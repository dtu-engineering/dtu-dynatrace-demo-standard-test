apiVersion: networking.k8s.io/v1
kind: Ingress
metadata:
  name: easytrade-ingress
  namespace: easytrade
  annotations:
    nginx.ingress.kubernetes.io/rewrite-target: /
    kubernetes.io/ingress.class: traefik
spec:
  rules:
    - host: easytrade.{{ ingress_domain }}
      http:
        paths:
          - path: /
            pathType: Prefix
            backend:
              service:
                name: frontendreverseproxy
                port:
                  number: 80
