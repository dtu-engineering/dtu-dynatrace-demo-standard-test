apiVersion: networking.k8s.io/v1
kind: Ingress
metadata:
  name: otel-frontend-proxy
  namespace: otel-demo
  annotations:
    kubernetes.io/ingress.class: traefik
spec:
  ingressClassName: traefik
  rules:
    - host: astroshop.{{ ingress_domain }}
      http:
        paths:
          - path: /
            pathType: Prefix
            backend:
              service:
                name: frontend-proxy
                port:
                  number: 8080
